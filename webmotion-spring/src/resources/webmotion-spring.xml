<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="parametersMultipartHandler"         class="ParametersMultipartHandler"/>
    <bean id="filterFinderHandler"                class="FilterFinderHandler"/>
    <bean id="actionFinderHandler"                class="ActionFinderHandler"/>
    <bean id="parametersExtractorHandler"         class="ParametersExtractorHandler"/>
    <bean id="errorFinderHandler"                 class="ErrorFinderHandler"/>
    <bean id="actionExecuteRenderHandler"         class="ActionExecuteRenderHandler"/>
    <bean id="filterMethodFinderHandler"          class="FilterMethodFinderHandler"/>
    <bean id="actionMethodFinderHandler"          class="ActionMethodFinderHandler"/>
    <bean id="errorMethodFinderHandler"           class="ErrorMethodFinderHandler"/>
    <bean id="springInstanceCreatorHandler"       class="SpringInstanceCreatorHandler"/>
    <bean id="executorParametersConvertorHandler" class="ExecutorParametersConvertorHandler"/>
    <bean id="executorParametersInjectorHandler"  class="ExecutorParametersInjectorHandler"/>
    <bean id="executorParametersValidatorHandler" class="ExecutorParametersValidatorHandler"/>
    <bean id="executorMethodInvokerHandler"       class="ExecutorMethodInvokerHandler"/>
    <bean id="renderCreatorHandler"               class="RenderCreatorHandler"/>

    <bean id="springActionHandlers" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="parametersMultipartHandler" />
                <ref bean="filterFinderHandler" />
                <ref bean="actionFinderHandler" />
                <ref bean="parametersExtractorHandler" />
                <ref bean="actionExecuteRenderHandler" />
                <ref bean="filterMethodFinderHandler" />
                <ref bean="actionMethodFinderHandler" />
                <ref bean="springInstanceCreatorHandler" />
                <ref bean="executorParametersConvertorHandler" />
                <ref bean="executorParametersInjectorHandler" />
                <ref bean="executorParametersValidatorHandler" />
                <ref bean="executorMethodInvokerHandler" />
                <ref bean="renderCreatorHandler" />
            </list>
        </constructor-arg>
    </bean>

    <bean id="springErrorHandlers" class="java.util.ArrayList">
        <constructor-arg>
            <list>
                <ref bean="parametersMultipartHandler" />
                <ref bean="errorFinderHandler" />
                <ref bean="actionExecuteRenderHandler" />
                <ref bean="errorMethodFinderHandler" />
                <ref bean="springInstanceCreatorHandler" />
                <ref bean="executorParametersInjectorHandler" />
                <ref bean="executorMethodInvokerHandler" />
                <ref bean="renderCreatorHandler" />
            </list>
        </constructor-arg>
    </bean>

</beans>
